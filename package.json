{
  "name": "fs-no-eperm-anymore",
  "version": "2.0.0",
  "description": "Node.js module that reduces EPERM errors on win32 platform using retry approach",
  "author": "Vladimir Yakovlev <dev.vladimir.y@gmail.com> (https://github.com/vladimiry)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:vladimiry/fs-no-eperm-anymore.git"
  },
  "keywords": [
    "fs",
    "retry",
    "retries",
    "error",
    "handling",
    "EPERM"
  ],
  "engines": {
    "node": ">=6.12.0"
  },
  "main": "./index.js",
  "scripts": {
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "dist:compile": "tsc --outDir ./dist",
    "dist:compile:watch": "tsc --outDir ./dist -w",
    "dist:clean": "rimraf ./dist",
    "dist:copy": "cpx \"{package.json,README.md,LICENSE}\" ./dist",
    "dist": "npm-run-all lint dist:clean dist:compile dist:copy test",
    "lint:src": "tslint -c ./tslint.json \"./src/{lib,@types}/**/*.ts\"",
    "lint:test": "tslint -c ./tslint-test.json \"./src/test/**/*.ts\"",
    "lint": "npm-run-all lint:src lint:test",
    "test": "cross-env TS_NODE_PROJECT=./src/test/tsconfig.json ava-ts --verbose \"./src/test/**/*.spec.ts\""
  },
  "pre-commit": [
    "lint"
  ],
  "ava": {
    "TODO ava 1": "get rid of ava-ts, run tests using ts-node as soon as ava gets *.ts file pattern allowed",
    "TODO ava 2": "ts-node/register is added as ava-ts doesn't work well with just tsconfig-paths/register added without explicit ts-node/register attaching",
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "devDependencies": {
    "@types/mkdirp": "^0.5.1",
    "@types/node": "^8.0.57",
    "@types/randomstring": "^1.1.6",
    "ava": "^0.24.0",
    "ava-ts": "^0.23.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.1",
    "mkdirp": "^0.5.1",
    "node-platforms": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "pre-commit": "^1.2.2",
    "randomstring": "^1.1.5",
    "rimraf": "^2.6.2",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.4.0",
    "tslint": "^5.8.0",
    "tslint-rules-bunch": "^0.0.3",
    "typescript": "~2.6.2"
  },
  "dependencies": {
    "tslib": "~1.8.1",
    "util.promisify": "^1.0.0"
  }
}
