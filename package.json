{
  "name": "fs-no-eperm-anymore",
  "version": "2.0.0",
  "description": "Node.js module that reduces EPERM errors on win32 platform using retry approach",
  "author": "Vladimir Yakovlev <dev.vladimir.y@gmail.com> (https://github.com/vladimiry)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:vladimiry/fs-no-eperm-anymore.git"
  },
  "keywords": [
    "fs",
    "retry",
    "retries",
    "error",
    "handling",
    "EPERM"
  ],
  "engines": {
    "node": ">=6.12.0"
  },
  "main": "./index.js",
  "scripts": {
    "compile": "tsc -p ./src/lib/tsconfig.json",
    "compile:watch": "tsc -p ./src/lib/tsconfig.json -w",
    "dist:compile": "tsc -p ./src/lib/tsconfig.json --outDir ./dist",
    "dist:compile:watch": "tsc -p ./src/lib/tsconfig.json --outDir ./dist -w",
    "dist:clean": "rimraf ./dist",
    "dist:copy": "cpx \"{package.json,README.md,LICENSE}\" ./dist",
    "dist": "npm-run-all lint dist:clean dist:compile dist:copy test",
    "lint:src": "tslint -p ./tsconfig.json -c ./tslint.json \"./src/{lib,@types}/**/*.ts\"",
    "lint:test": "tslint -p ./tsconfig.json -c ./tslint-test.json \"./src/test/**/*.ts\"",
    "lint": "npm-run-all lint:src lint:test",
    "test": "cross-env TS_NODE_PROJECT=./src/test/tsconfig.json ava --verbose \"./src/test/**/*.spec.ts\""
  },
  "pre-commit": [
    "lint"
  ],
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "devDependencies": {
    "@types/mkdirp": "^0.5.1",
    "@types/node": "^10.3.6",
    "@types/randomstring": "^1.1.6",
    "ava": "^1.0.0-beta.6",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.1",
    "mkdirp": "^0.5.1",
    "node-platforms": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "pre-commit": "^1.2.2",
    "randomstring": "^1.1.5",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.4.1",
    "tslint": "^5.8.0",
    "tslint-rules-bunch": "^0.0.4",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "tslib": "^1.9.3",
    "util.promisify": "^1.0.0"
  }
}
